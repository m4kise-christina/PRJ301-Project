<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControllerCustomers</servlet-name>
        <servlet-class>Controller.ControllerCustomers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerProduct</servlet-name>
        <servlet-class>Controller.ControllerProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerShop</servlet-name>
        <servlet-class>Controller.ControllerShop</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerCart</servlet-name>
        <servlet-class>Controller.ControllerCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SingleProduct</servlet-name>
        <servlet-class>Controller.SingleProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerCustomers</servlet-name>
        <url-pattern>/ControllerCustomers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerProduct</servlet-name>
        <url-pattern>/ControllerProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerShop</servlet-name>
        <url-pattern>/ControllerShop</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerCart</servlet-name>
        <url-pattern>/ControllerCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SingleProduct</servlet-name>
        <url-pattern>/SingleProduct</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
